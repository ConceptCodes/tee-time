{
  "name": "tee-time",
  "private": true,
  "scripts": {
    "db:generate": "dotenvx run -- sh -c 'cd packages/database && bunx drizzle-kit generate'",
    "db:migrate": "dotenvx run -- sh -c 'cd packages/database && bunx drizzle-kit migrate'",
    "db:push": "dotenvx run -- sh -c 'cd packages/database && bunx drizzle-kit push --force'",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "admin:dev": "dotenvx run -- bun --filter @tee-time/admin dev",
    "api:dev": "dotenvx run -- bun --filter @tee-time/api dev",
    "worker:dev": "dotenvx run -- bun --filter @tee-time/worker dev",
    "chat": "dotenvx run -- bun packages/agent/scripts/chat.ts",
    "evals": "dotenvx run -- bun --filter @tee-time/evals run"
  },
  "devDependencies": {},
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "biome": "^0.3.3",
    "@dotenvx/dotenvx": "^1.31.0",
    "drizzle-kit": "^0.31.8",
    "hono": "^4.11.3",
    "zod": "^4.2.1"
  }
}
