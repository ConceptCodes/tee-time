{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "installCommand": "cd ../.. && bun install",
  "buildCommand": "bun scripts/build-vercel.ts",
  "outputDirectory": ".",
  "functions": {
    "api/index.mjs": {
      "runtime": "@vercel/node@3",
      "includeFiles": "api/**"
    }
  },
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/index.mjs" }
  ]
}
